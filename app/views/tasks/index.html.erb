<h1>All tasks</h1>

<%= link_to "Add a new task", new_task_path %>

<% @tasks.each do |task| %>
  <h2><%= link_to task.name, task_path(task) %></h2>
  <p><%= task.status %></p>
  <%= link_to "edit task", edit_task_path(task) %>
  <%= link_to "delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
